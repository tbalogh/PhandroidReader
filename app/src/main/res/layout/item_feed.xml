<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/layout_item"
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:padding="8dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_photo"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:padding="2dp"
        app:riv_corner_radius="2dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_extra_info"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/img_photo"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="This is some large text that is definitely not fit to the window especialy when I multiply it. This is some large text that is definitely not fit to the window especialy when I multiply it."/>

    <TextView
        android:id="@+id/tv_extra_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/img_photo"
        android:layout_toStartOf="@+id/tv_seen"
        android:ellipsize="end"
        tools:text="Phandroid | helo"/>

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:id="@+id/tv_seen"
        android:text="@string/seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>